<?xml version='1.0' encoding='utf-8'?>
<widget id="com.spidchain.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Spidchain</name>
    <description>
       Distributed Self-Sovereign Identity
    </description>
    <author email="federico@spidchain.com" href="http://www.spidchain.com">
        Spidchain Team
    </author>
    <content src="index-cordova.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/icons/android-chrome-36x36.png" />
        <icon density="mdpi" src="www/icons/android-chrome-48x48.png" />
        <icon density="hdpi" src="www/icons/android-chrome-72x72.png" />
        <icon density="xhdpi" src="www/icons/android-chrome-96x96.png" />
        <icon density="xxhdpi" src="www/icons/android-chrome-144x144.png" />
        <icon density="xxxhdpi" src="www/icons/android-chrome-192x192.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="www/icons/apple-touch-icon-180x180.png" width="180" />
        <icon height="60" src="www/icons/apple-touch-icon-60x60.png" width="60" />
        <icon height="120" src="www/icons/apple-touch-icon-120x120.png" width="120" />
        <icon height="76" src="www/icons/apple-touch-icon-76x76.png" width="76" />
        <icon height="152" src="www/icons/apple-touch-icon-152x152.png" width="152" />
        <icon height="57" src="www/icons/apple-touch-icon-57x57.png" width="57" />
        <icon height="114" src="www/icons/apple-touch-icon-114x114.png" width="114" />
        <icon height="72" src="www/icons/apple-touch-icon-72x72.png" width="72" />
        <icon height="144" src="www/icons/apple-touch-icon-144x144.png" width="144" />
        <icon height="167" src="www/icons/apple-touch-icon-167x167.png" width="167" />
    </platform>
    <preference name="StatusBarOverlaysWebView" value="true" />
    <engine name="android" spec="^6.2.3" />
    <engine name="browser" spec="^4.1.0" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-qrscanner" spec="^2.5.0" />
    <plugin name="cordova-plugin-statusbar" spec="^2.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
